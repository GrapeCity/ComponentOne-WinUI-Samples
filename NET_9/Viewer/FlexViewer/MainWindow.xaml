<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FlexViewer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlexViewer"
    xmlns:c1="using:C1.WinUI.Viewer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="using:FlexViewer.Resources"
    mc:Ignorable="d">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="1" Grid.Column="1" Fill="{ThemeResource RectFillBrush}" />
        
        <StackPanel Height="50" Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Background="#D6564C">
            <Button x:Name="ClickableLabelButton"
                Content="{x:Bind res:Resource.HeaderContent}"
                Style="{StaticResource NoHoverButtonStyle}"
                Click="ClickableLabelButton_Click"/>
        </StackPanel>

        <NavigationView
        x:Name="LeftNavigationView"
        Grid.Row="1" Grid.Column="0" Grid.RowSpan="2"
        IsSettingsVisible="False"
        IsBackButtonVisible="Collapsed"
        IsPaneOpen="True"
        PaneDisplayMode="Left"
        IsPaneToggleButtonVisible="False"
        ItemInvoked="LeftNavigationView_ItemInvoked">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="{x:Bind res:Resource.PDFTitle}" Tag="pdf">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7C3;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="{x:Bind res:Resource.FlexReportTitle}" Tag="flexreport">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7C3;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="{x:Bind res:Resource.ReportServiceTitle}" Tag="reportservice">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7C3;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
        </NavigationView>

        <ComboBox
        x:Name="ComboBox" Width="250"
        Style="{StaticResource CustomComboBoxStyle}"
        SelectionChanged="ComboBox_SelectionChanged"
        Grid.Row="1" Grid.Column="1"
        Margin="10"
        PlaceholderText="{x:Bind res:Resource.FlexReportNamesPlaceholder}"
        Visibility="Collapsed"/>

        
        <c1:FlexViewer
        x:Name="flexViewer"
        Grid.Row="2" Grid.Column="1"/>
    </Grid>
</Window>
